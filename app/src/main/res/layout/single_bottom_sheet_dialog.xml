<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/cardBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addPlace"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_place_black_24dp"
            android:drawableTint="@color/textSecondary"
            android:text="Ort Hinzuf端gen"
            android:textColor="@color/textSecondary"
            android:textSize="10sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lineSubtle" />

        <Button
            android:id="@+id/addPrice"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_attach_money_black_24dp"
            android:drawableTint="@color/textSecondary"
            android:text="Meinen Preis Hinzuf端gen"
            android:textColor="@color/textSecondary"
            android:textSize="10sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineSubtle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addToFridge"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_refrigerator"
            android:drawableTint="@color/textSecondary"
            android:text="In den K端hlschrank"
            android:textColor="@color/textSecondary"
            android:textSize="10sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lineSubtle" />

        <Button
            android:id="@+id/addPrivateNote"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_create_black_24dp"
            android:drawableTint="@color/textSecondary"
            android:text="Private Notiz hinzuf端gen"
            android:textColor="@color/textSecondary"
            android:textSize="10sp" />


    </LinearLayout>

</LinearLayout>